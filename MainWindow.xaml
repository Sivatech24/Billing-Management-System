<Window x:Class="Billing_Management_System.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Billing Management System"
        Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">

    <!-- ✅ DEFINE STYLE FIRST -->
    <Window.Resources>
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <DockPanel>

        <!-- TOP NAVIGATION BAR -->
        <Border Background="#2C3E50" DockPanel.Dock="Top" Height="60">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                <Button Content="Home" Style="{StaticResource NavButtonStyle}" Click="Home_Click"/>
                <Button Content="Make Bill" Style="{StaticResource NavButtonStyle}" Click="Bill_Click"/>
                <Button Content="Payments" Style="{StaticResource NavButtonStyle}" Click="Payments_Click"/>
                <Button Content="Add Data" Style="{StaticResource NavButtonStyle}" Click="AddData_Click"/>
                <Button Content="View Data" Style="{StaticResource NavButtonStyle}" Click="ViewData_Click"/>
                <Button Content="Print" Style="{StaticResource NavButtonStyle}" Click="Print_Click"/>
                <Button Content="Options" Style="{StaticResource NavButtonStyle}" Click="Options_Click"/>
                <Button Content="Help" Style="{StaticResource NavButtonStyle}" Click="Help_Click"/>

            </StackPanel>
        </Border>

        <!-- MAIN CONTENT -->
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>

    </DockPanel>

</Window>